# /etc/systemd/system/zcompd.service
[Unit]
Description=Zfts transfer system
After=network.target
Wants=network-online.target

[Service]
Type=simple
#User=admin
#Group=admin
ExecStart=/opt/prgsnap/bin/zfts -c /home/admin/zfts.configs/zfts_zcomp_gnd.ini
ExecStop=/bin/kill -TERM $MAINPID
PIDFile=/run/zcompd.pid
WorkingDirectory=/opt/prgsnap
Restart=on-failure
RestartSec=5
# Optional security hardening
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=zfts

[Install]
WantedBy=default.target
